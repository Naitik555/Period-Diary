<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Question">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@color/bg_screen1"
            android:gravity="center"
            android:text="COLOR"
            android:textColor="@color/colorPrimary"
            android:textSize="25dp"
            android:textStyle="bold" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="190dp"
                android:layout_gravity="center"
                android:background="@color/bg_screen1"
                android:layout_marginRight="0dp"
                android:columnCount="2"
                android:orientation="horizontal"
                android:rowCount="2">


                <RadioButton
                    android:id="@+id/red"
                    android:layout_width="120dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="15dp"
                    android:background="@color/bg_screen2"
                    android:backgroundTint="#E91E63"
                    android:text="RED"
                    android:textColor="#000"
                    android:textSize="25dp"
                    android:textStyle="bold">

                </RadioButton>

                <RadioButton
                    android:id="@+id/lightred"
                    android:layout_width="120dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="100dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="50dp"
                    android:background="@color/bg_screen2"
                    android:backgroundTint="#E91E63"
                    android:text="RED"
                    android:textColor="#000"
                    android:textSize="25dp"
                    android:textStyle="bold">

                </RadioButton>

                <RadioButton
                    android:id="@+id/redthree"
                    android:layout_width="120dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="15dp"
                    android:background="@color/bg_screen2"
                    android:backgroundTint="#E91E63"
                    android:text="RED"
                    android:textColor="#000"
                    android:textSize="25dp"
                    android:textStyle="bold">

                </RadioButton>

                <RadioButton
                    android:id="@+id/redfour"
                    android:layout_width="120dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="100dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="50dp"
                    android:background="@color/bg_screen2"
                    android:backgroundTint="#E91E63"
                    android:text="RED"
                    android:textColor="#000"
                    android:textSize="25dp"
                    android:textStyle="bold">

                </RadioButton>

                <RadioButton
                    android:id="@+id/redfive"
                    android:layout_width="120dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="15dp"
                    android:background="@color/bg_screen2"
                    android:backgroundTint="#E91E63"
                    android:text="RED"
                    android:textColor="#000"
                    android:textSize="25dp"
                    android:textStyle="bold">

                </RadioButton>

                <RadioButton
                    android:id="@+id/redsix"
                    android:layout_width="120dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="100dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="50dp"
                    android:background="@color/bg_screen2"
                    android:backgroundTint="#E91E63"
                    android:text="RED"
                    android:textColor="#000"
                    android:textSize="25dp"
                    android:textStyle="bold">

                </RadioButton>

            </GridLayout>

        </RadioGroup>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@color/bg_screen1"
            android:gravity="center"
            android:text="WHAT IS YOUR BMI"
            android:textColor="@color/colorPrimary"
            android:textSize="25sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/height"
            android:layout_width="375dp"
            android:layout_height="35dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/bg_screen1"
            android:hint="ENTER HEIGHT" />

        <EditText
            android:id="@+id/weight"
            android:layout_width="375dp"
            android:layout_height="35dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/bg_screen1"
            android:hint="ENTER WEIGHT" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@color/bg_screen1"
            android:gravity="center"
            android:text="HOW IS YOUR STRESS LEVEL"
            android:textColor="@color/colorPrimary"
            android:textSize="25sp"
            android:textStyle="bold" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:layout_gravity="center"
                android:background="@color/bg_screen1"
                android:columnCount="2"
                android:orientation="horizontal"
                android:rowCount="2">

                <RadioButton
                    android:id="@+id/calm"
                    android:layout_width="100dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="8dp"
                    android:background="@color/bg_screen2"
                    android:text="CALM"
                    android:textColor="#000"
                    android:textSize="20dp"
                    android:textStyle="bold">

                </RadioButton>

                <RadioButton
                    android:id="@+id/medium"
                    android:layout_width="120dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="8dp"
                    android:background="@color/bg_screen2"
                    android:text="MEDIUM"
                    android:textColor="#000"
                    android:textSize="20dp"
                    android:textStyle="bold">

                </RadioButton>

                <RadioButton
                    android:id="@+id/low"
                    android:layout_width="100dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="8dp"
                    android:background="@color/bg_screen2"
                    android:text="LOW"
                    android:textColor="#000"
                    android:textSize="20dp"
                    android:textStyle="bold">

                </RadioButton>

                <RadioButton
                    android:id="@+id/high"
                    android:layout_width="100dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="8dp"
                    android:background="@color/bg_screen2"
                    android:text="HIGH"
                    android:textColor="#000"
                    android:textSize="20dp"
                    android:textStyle="bold">

                </RadioButton>

            </GridLayout>

        </RadioGroup>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@color/bg_screen1"
            android:gravity="center"
            android:text="HOW WAS YOUR FLOW"
            android:textColor="@color/colorPrimary"
            android:textSize="25sp"
            android:textStyle="bold" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:layout_gravity="center"
                android:background="@color/bg_screen1"
                android:columnCount="2"
                android:orientation="horizontal"
                android:rowCount="2">

                <RadioButton
                    android:id="@+id/one"
                    android:layout_width="100dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="8dp"
                    android:background="@color/bg_screen2"
                    android:text="CALM"
                    android:textColor="#000"
                    android:textSize="20dp"
                    android:textStyle="bold">

                </RadioButton>

                <RadioButton
                    android:id="@+id/two"
                    android:layout_width="120dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="8dp"
                    android:background="@color/bg_screen2"
                    android:text="MEDIUM"
                    android:textColor="#000"
                    android:textSize="20dp"
                    android:textStyle="bold">

                </RadioButton>

                <RadioButton
                    android:id="@+id/thirth"
                    android:layout_width="100dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="8dp"
                    android:background="@color/bg_screen2"
                    android:text="LOW"
                    android:textColor="#000"
                    android:textSize="20dp"
                    android:textStyle="bold">

                </RadioButton>

                <RadioButton
                    android:id="@+id/fourth"
                    android:layout_width="100dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="8dp"
                    android:background="@color/bg_screen2"
                    android:text="HIGH"
                    android:textColor="#000"
                    android:textSize="20dp"
                    android:textStyle="bold">

                </RadioButton>

            </GridLayout>

        </RadioGroup>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_marginTop="44dp"
            android:background="@drawable/bg_btn"
            android:paddingStart="30dp"
            android:gravity="center"
            android:textStyle="bold"
            android:id="@+id/button"
            android:textSize="30dp"
            android:layout_gravity="center_horizontal"
            android:paddingEnd="30dp"
            android:text="GET YOU ANSWER"
            android:textColor="#000" />

    </LinearLayout>

</ScrollView>