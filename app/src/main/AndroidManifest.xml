<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.project.perioddiary">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:hardwareAccelerated="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".calendar.CalendarActivity"
            android:theme="@style/AppTheme1">
        </activity>
        <activity android:name=".Patient.Patient" />
        <activity
            android:name=".SignUp.Patient"
            tools:ignore="MissingClass" />
        <activity
            android:name=".SignUp.Doctor"
            tools:ignore="MissingClass" />
        <activity android:name=".patientlogin" />
        <activity android:name=".doctorlogin" />
        <activity android:name=".doctorpatient" />
        <activity android:name=".splash.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".IntroActivity" />
        <activity
            android:name=".MainActivity"
            android:theme="@style/main"
            tools:ignore="ExtraText">
            android:name="com.project.perioddiary.MainActivity"
            android:label="@string/title_activity_intro" ></activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>